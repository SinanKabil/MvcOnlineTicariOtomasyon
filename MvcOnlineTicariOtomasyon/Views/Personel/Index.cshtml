@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>DEPARTMAN</th>
        <th>GÜNCELLE</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelID</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>
                <img style="width:75px;height:50px" src="@item.PersonelGorsel" />
            </td>
            <td>@item.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelGetir/@item.PersonelID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-success" style="background-color:#4f4e4e;border-color:#4f4e4e">Satışlar</a>
            </td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>


