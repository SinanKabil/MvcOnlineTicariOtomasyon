@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.GrupSinif2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Personel Departman Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@item.Departman</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 50%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.Sayi</span></td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

