@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
        <th>ŞİFRE</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>DETAY</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CariID</td>
            <td>@item.CariAd</td>
            <td>@item.CariSoyad</td>
            <td>@item.CariSehir</td>
            <td>@item.CariMail</td>
            <td>@item.CariSifre</td>
            <td>
                <a href="/Cari/CariGetir/@item.CariID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Cari/CariSil/@item.CariID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Cari/CariDetay/@item.CariID" class="btn btn-success" style="background-color:#4f4e4e;border-color:#4f4e4e">Detay</a>
            </td>
        </tr>
    }
</table>
<a href="/Cari/CariEkle/" class="btn btn-primary">Yeni Cari Ekle</a>

