@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="text-align:center">Satış Detayı</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th>ID</th>
        <th>TARİH</th>
        <th>ÜRÜN</th>
        <th>MÜŞTERİ</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisHareketID</td>
            <td>@item.SatisHareketTarih</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.SatisHareketFiyat</td>
            <td>@item.SatisHareketAdet</td>
            <td>@item.SatisHareketToplamTutar</td>
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:dodgerblue">Yazdır</button>
