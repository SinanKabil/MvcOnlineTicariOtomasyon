@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>TARİH</th>
            <th>ÜRÜN</th>
            <th>MÜŞTERİ</th>
            <th>PERSONEL</th>
            <th>FİYAT</th>
            <th>ADET</th>
            <th>TOPLAM</th>
            <th>GÜNCELLE</th>
            <th>DETAY</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SatisHareketID</td>
                <td>@Convert.ToDateTime(item.SatisHareketTarih).ToString("dd/MM/yyyy")</td>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.SatisHareketFiyat</td>
                <td>@item.SatisHareketAdet</td>
                <td>@item.SatisHareketToplamTutar</td>
                <td><a href="/Satis/SatisGetir/@item.SatisHareketID" class="btn btn-success">Güncelle</a></td>
                <td>
                    <a href="/Satis/SatisDetay/@item.SatisHareketID" class="btn btn-success" style="background-color:#4f4e4e;border-color:#4f4e4e">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/SatisEkle" class="btn btn-primary">Yeni Satış Yap</a>

