@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center">Yeni Departman Sayfası</h2>
<br />
<form class="form-group" method="post">
    <label>Departman Adı</label>
    @Html.TextBoxFor(x =>x.DepartmanAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Ekle</button>
</form>
