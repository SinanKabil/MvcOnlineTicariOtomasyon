@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="text-align:center">Departman Detay Sayfası</h2>
<br />
<div style="background-color:#bebebe;height:30px;text-align:center"><b>@ViewBag.depad</b></div>
<br />
<table class="table table-hover">
    <tr>
        <th>PERSONEL AD</th>
        <th>PERSONEL SOYAD</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-default" style="background-color:#e03fff">Satışlar</a></td>
        </tr>
    }
</table>