@using MvcOnlineTicariOtomasyon.Models.Sınıflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunAd</td>
            <td>@item.UrunMarka</td>
            <td>@item.UrunStok</td>
            <td>@item.UrunAlisFiyat<span>₺</span></td>
            <td>@item.UrunSatisFiyat<span>₺</span></td>
            <td>@item.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/UrunSil/@item.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/SatisYap/@item.UrunID" class="btn btn-warning" style="background-color:#032dcf;color:white;width:90px">Satış Yap</a></td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>

