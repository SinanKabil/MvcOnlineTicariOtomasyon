@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2 style="text-align:center">Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x=>x.KategoriAd,new {@class="form-control"})
<br />
    <button class="btn btn-info" id="Btn1">Ekle</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategori Başarılı Bir Şekilde Eklendi.")
        });
    </script>
</form>
